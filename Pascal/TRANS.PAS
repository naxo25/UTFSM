UNIT TRANS;

INTERFACE

 VAR C:CHAR; I:BYTE; RESULTADO:STRING;
 FUNCTION MAYUSCULAS(TEXTO:STRING):STRING;
 FUNCTION MINUSCULAS(TEXTO:STRING):STRING;
 FUNCTION SIN_ESPACIOS(TEXTO:STRING):STRING;
 FUNCTION TRES_IZQ(TEXTO:STRING):STRING;
 FUNCTION TRES_DER(TEXTO:STRING):STRING;
 FUNCTION REEMPLAZAR(TEXTO:STRING):STRING;
 FUNCTION MEDIO(TEXTO:STRING):STRING;
 FUNCTION POSICION(TEXTO:STRING):STRING;
 FUNCTION CENTRAR(TEXTO:STRING):STRING;

IMPLEMENTATION

 FUNCTION MAYUSCULAS(TEXTO:STRING):STRING;
 BEGIN
 RESULTADO:=' ';
      FOR I:=1 TO LENGTH(TEXTO) DO
      BEGIN
           IF (TEXTO[I] >= 'a') AND (TEXTO[I] <= 'z') THEN
              C:=UPCASE( TEXTO[I])
              ELSE C:=TEXTO[I];
           RESULTADO:=RESULTADO+C;
      END;
      MAYUSCULAS:=RESULTADO;
 END;

 FUNCTION MINUSCULAS(TEXTO:STRING):STRING;
 BEGIN
 RESULTADO:=' ';
      FOR I:=1 TO LENGTH(TEXTO) DO
      BEGIN
           IF (TEXTO[I] >= 'A') AND (TEXTO[I] <= 'Z') THEN
              C:=CHR(ORD(TEXTO[I])+32)
              ELSE C:=TEXTO[I];
           RESULTADO:=RESULTADO+C;
      END;
      MINUSCULAS:=RESULTADO;
 END;

 FUNCTION SIN_ESPACIOS(TEXTO:STRING):STRING;
 VAR A,B,SW:BYTE;
 BEGIN
 SW:=0; A:=0;
      FOR I:=1 TO LENGTH(TEXTO) DO
      BEGIN
           IF (TEXTO[I] = ' ') AND (SW<>1) THEN
              A:=A+1
              ELSE SW:=1;
           IF (TEXTO[I]<>' ') THEN
              B:=I;
      END;
      SIN_ESPACIOS:=COPY(TEXTO,A,B);
 END;

 FUNCTION TRES_IZQ(TEXTO:STRING):STRING;
 BEGIN
      TRES_IZQ:=COPY(TEXTO,1,3);
 END;

 FUNCTION TRES_DER(TEXTO:STRING):STRING;
 BEGIN
      TRES_DER:=COPY(TEXTO,LENGTH(TEXTO)-2,3);
 END;

 FUNCTION MEDIO(TEXTO:STRING):STRING;
 BEGIN
      MEDIO:=COPY(TEXTO,TRUNC((LENGTH(TEXTO)/2)-2),5);
 END;

 FUNCTION REEMPLAZAR(TEXTO:STRING):STRING;
 BEGIN
 RESULTADO:=' ';
      FOR I:=1 TO LENGTH(TEXTO) DO
          IF TEXTO[I]='R' THEN
             RESULTADO:=RESULTADO+'XL'
             ELSE RESULTADO:=RESULTADO+TEXTO[I];
      REEMPLAZAR:=RESULTADO;
 END;

