 END;

 FUNCTION CENTRAR(TEXTO:STRING):STRING;
 VAR H:BYTE;
 BEGIN
      RESULTADO:=' ';
      I:=60-LENGTH(TEXTO);
      I:=TRUNC(I/2);
      FOR H:=1 TO I DO
          RESULTADO:=RESULTADO+' ';
      RESULTADO:=RESULTADO+TEXTO;
      FOR H:=1 TO I DO
          RESULTADO:=RESULTADO+' ';
      CENTRAR:=RESULTADO;
 END;

END.